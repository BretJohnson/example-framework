<?xml version="1.0"?>
<package >
  <metadata>
    $CommonMetadataElements$
    <dependencies>
      <group targetFramework="netstandard2.0" />
      <group targetFramework="net472" />
      <group targetFramework="net6.0" />
    </dependencies>
  </metadata>
  <files>
    $CommonFileElements$

    <!-- netstandard2.0 -->
    <file src="$RepoRoot$src\Build\NetCore\ExampleFramework.TestAdapter.props" target="build\netstandard2.0\" />
    <file src="netstandard2.0\ExampleFramework.TestAdapter.dll" target="build\netstandard2.0\" />

    <!-- net6.0 -->
    <file src="$RepoRoot$src\Build\Net6\ExampleFramework.TestAdapter.props" target="build\net6.0\ExampleFramework.TestAdapter.props" />
    <file src="$RepoRoot$src\Build\Net6\ExampleFramework.TestAdapter.targets" target="build\net6.0\ExampleFramework.TestAdapter.targets" />
    <file src="net6.0\ExampleFramework.TestAdapter.dll" target="build\net6.0\" />

    <!-- net472 -->
    <file src="$RepoRoot$src\Build\Desktop\ExampleFramework.TestAdapter.props" target="build\net462\" />
    <file src="$RepoRoot$src\Build\Desktop\ExampleFramework.TestAdapter.targets" target="build\net462\" />
    <file src="net462\ExampleFramework.TestAdapter.dll" target="build\net462\" />

    <!-- Localization -->
    <!-- All TFMs share the same resx + TestAdapter depends on PlatformServices + TestFramework so all resources are available -->
    <file src="net462\**\*.resources.dll" target="\build\_localization\" />

    <!-- Source code -->
    <file src="$srcroot$\**\*.cs" target="src" />
  </files>
</package>
