<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:t="clr-namespace:ExampleFramework.Tooling.Maui.Controls.TreeView"
            x:Class="ExampleFramework.Tooling.Maui.Views.DesktopGalleryMainPage"
            Title="Example Book">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <ScrollView Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    BackgroundColor="{AppThemeBinding Light=#f3f3f3, Dark=#202020}">
            <t:TreeView x:Name="NavigationTree"
                        ItemsSource="{Binding Nodes}"
                        SelectedItemColor="{AppThemeBinding Light=#eaeaea, Dark=#292929}">
                <t:TreeView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Padding="8,8">
                            <HorizontalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTreeNodeTapped"
                                                        NumberOfTapsRequired="1" />
                            </HorizontalStackLayout.GestureRecognizers>
                            <Label Text="{Binding Name}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </t:TreeView.ItemTemplate>
            </t:TreeView>
        </ScrollView>

        <ScrollView Grid.Column="1" Grid.Row="0">
            <ContentView x:Name="ExampleWrapper"
                         />
        </ScrollView>

        <HorizontalStackLayout Grid.Column="1" Grid.Row="1" BackgroundColor="White" Spacing="10" Padding="8,2" >
            <Button BackgroundColor="DarkBlue" Text="Properties"></Button>
            <Button BackgroundColor="SkyBlue" Text="Emitted Events"></Button>
            <Button BackgroundColor="SkyBlue" Text="Accessibility" ></Button>
        </HorizontalStackLayout>

        <ScrollView Orientation="Vertical" Grid.Column="1" Grid.Row="2" BackgroundColor="White" Padding="8">
            <CollectionView ItemsSource="{Binding SelectedItemsProperties}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Label WidthRequest="300" Text="{Binding Name}" TextColor="Black"/>
                            <Label WidthRequest="400" Text="{Binding Value}" TextColor="Black"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>

</ContentPage>
